@model Models.Recruitment
@{
    ViewBag.Title = "ModifyRecruit";
    Layout = "~/Areas/HotelAdmin/Views/Shared/AdminLayout.cshtml";
}
<style type="text/css">
    .txt {
        width: 80px;
    }
</style>
<script src="~/Scripts/jquery-1.8.2.min.js"></script>
<script type="text/javascript">
    $(function () {
        var postType2 = $("#PostType1").val();//获取到它的值
        $("#PostType").val(postType2);
        var Experience2 = $("#Experience1").val();//获取到它的值
        $("#Experience").val(Experience2);
        var EduBackground2 = $("#EduBackground1").val();//获取到它的值
        $("#EduBackground").val(EduBackground2);
    });
</script>
@using (Html.BeginForm("DoRecruitment", "Recruitment", FormMethod.Post))
{
    <div class="txtContentdiv">
        <div class="txtItemdiv">
            @Html.Hidden("PostId", Model.PostId) @*隐藏表单，用于判断用户是做新增还是修改操作*@
            @Html.Hidden("PostType1", Model.PostType,new { id= "PostType1" })@*职位类型*@
            @Html.Hidden("Experience1", Model.Experience,new { id= "Experience1" })@*工作经验*@
            @Html.Hidden("EduBackground1", Model.EduBackground,new { id= "EduBackground1" })@*学历要求*@
            @*通过隐藏域的名称动态的给下拉列表赋值*@
            职位名称：@Html.TextBox("PostName", Model.PostName, new { @class = "txt" })
            职位类型：
            <select id="PostType" name="PostType">
                <option>全职</option>
                <option>兼职</option>
            </select>
            工作经验：
            <select id="Experience" name="Experience">
                <option>1年</option>
                <option>2年</option>
                <option>3年</option>
                <option>4年</option>
                <option>5年</option>
            </select>
            学历要求：
            <select id="EduBackground" name="EduBackground">
                <option>本科</option>
                <option>硕士</option>
                <option>专科</option>
                <option>高中</option>
            </select>
            招聘人数：
            @Html.TextBox("RequireCount", Model.RequireCount, new { @class = "txt" })
            工作地点：
            @Html.TextBox("PostPlace", Model.PostPlace, new { @class = "txt" })
        </div>
        <div class="txtItemdiv">
            职位描述：
        </div>
        <div class="txtItemdiv">
            @Html.TextArea("PostRequire",Model.PostRequire, new { cols = "100", rows = "10" })

        </div>
        <div class="txtItemdiv">
            具体要求：
        </div>
        <div class="txtItemdiv">
            @Html.TextArea("PostDesc",Model.PostDesc, new { cols = "100", rows = "10" })

        </div>
        <div class="txtItemdiv">
            联系人：
            @Html.TextBox("Manager",Model.Manager)
            电话：@Html.TextBox("PhoneNumber",Model.PhoneNumber)

            电子邮件：@Html.TextBox("Email",Model.Email)
        </div>
        <div class="txtItemdiv">
            <button class="btncss" id="btnModify" type="submit">立即修改</button>
        </div>
    </div>
}
